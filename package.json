{
  "name": "shellapp",
  "version": "1.0.0",
  "description": "一款针对于Electron开发的可以将任意网站变成app的软件",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "author": "akl7777777",
  "license": "MIT",
  "build": {
    "appId": "com.shellgpt.shellapp",
    "productName": "Shell App",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      ".env"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "deb"
    }
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "cross-env": "^7.0.3",
    "electron": "^29.1.1",
    "electron-builder": "^24.13.3",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}
